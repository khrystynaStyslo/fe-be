{
  "name": "nodejs",
  "version": "1.0.0",
  "description": "Node js",
  "main": "app.js",
  "scripts": {
    "start": "cross-env NODE_END=production npm run start-node && npm run client:install && npm run client:build",
    "start-node": "node app.js",
    "server": "nodemon app.js",
    "client": "npm run start --prefix client",
    "client:install": "npm install --prefix client",
    "client:build": "npm run build --prefix client",
    "dev": "cross-env NODE_END=development concurrently \"npm run server\" \"npm run client\""
  },
  "author": "Khrystyna Styslo <khrystyna.styslo@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "config": "^3.3.6",
    "express": "^4.17.1",
    "express-validator": "^6.13.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.0.13",
    "path": "^0.12.7",
    "shortid": "^2.2.16",
    "cross-env": "^7.0.3",
    "concurrently": "^6.4.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.15"
  }
}
